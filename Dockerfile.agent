FROM ghcr.io/astral-sh/uv:python3.12-trixie

RUN adduser agentbeats
USER agentbeats
WORKDIR /home/agentbeats/personagym

COPY pyproject.toml uv.lock README.md ./

# Copy only the necessary files for personagym_agent
COPY src/agents/__init__.py src/agents/
COPY src/agents/personagym_agent src/agents/personagym_agent

RUN \
    --mount=type=cache,target=/home/agentbeats/.cache/uv,uid=1000 \
    uv sync --locked

COPY scenarios scenarios

ENTRYPOINT ["uv", "run", "--env-file", "src/.env", "src/agents/personagym_agent/agent.py"]
CMD ["--host", "0.0.0.0", "--port", "9020"]
EXPOSE 9020
